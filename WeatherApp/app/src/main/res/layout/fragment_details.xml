<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.DetailsFragment">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background_gradient">

        <ProgressBar
            android:id="@+id/progressBar_current"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginTop="40dp"
            android:indeterminateDrawable="@drawable/progress_bar"
            android:indeterminateDuration="@android:integer/config_longAnimTime"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/add_button"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/current_data"
            android:background="@drawable/rounded_rectangle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="20dp"
            android:layout_marginStart="26dp"
            android:layout_marginEnd="26dp"
            >
            <TextView
                android:id="@+id/current_temp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:textSize="40sp"
                android:layout_marginStart="20dp"
                android:textColor="@color/white"
                android:layout_marginTop="15dp"
                tools:text="24°"
                />
            <TextView
                android:id="@+id/current_city"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/current_temp"
                app:layout_constraintStart_toStartOf="@id/current_temp"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:layout_marginTop="4dp"
                tools:text="Rio de Janeiro"
                />
            <TextView
                android:id="@+id/current_country"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/current_city"
                app:layout_constraintStart_toStartOf="@id/current_city"
                android:textSize="20sp"
                android:textColor="@color/trans_white"
                android:layout_marginTop="4dp"
                tools:text="BRA"
                />
            <ImageView
                android:id="@+id/humidity_icon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                app:layout_constraintTop_toBottomOf="@id/current_country"
                app:layout_constraintStart_toStartOf="@id/current_country"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                android:src="@drawable/ic_humidity"/>
            <TextView
                android:id="@+id/humidity_percentage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@id/humidity_icon"
                app:layout_constraintTop_toTopOf="@id/humidity_icon"
                android:textColor="@color/white"
                android:textSize="14sp"
                tools:text="12%"
                android:layout_marginStart="4dp"
                />
            <ImageView
                android:id="@+id/wind_icon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                app:layout_constraintStart_toEndOf="@id/humidity_percentage"
                app:layout_constraintTop_toTopOf="@id/humidity_percentage"
                android:src="@drawable/ic_wind"
                android:layout_marginStart="20dp"/>

            <TextView
                android:id="@+id/wind_speed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@id/wind_icon"
                app:layout_constraintStart_toEndOf="@id/wind_icon"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:layout_marginStart="4dp"
                tools:text="12km/h"
                />
            <ImageView
                android:id="@+id/weather_icon"
                android:layout_width="150dp"
                android:layout_height="150dp"
                app:layout_constraintTop_toTopOf="@id/current_temp"
                app:layout_constraintBottom_toBottomOf="@id/wind_speed"
                app:layout_constraintEnd_toEndOf="parent"
                tools:src="@drawable/_10d" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/hourly_rv"
            android:layout_marginTop="20dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/current_data"
            app:layout_constraintTop_toBottomOf="@id/current_data"
            app:layout_constraintEnd_toEndOf="@id/current_data"
            tools:listitem="@layout/hourly_item"
            tools:itemCount="1"
            />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/additional_data"
            android:background="@drawable/rounded_rectangle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/current_data"
            app:layout_constraintTop_toBottomOf="@id/hourly_rv"
            app:layout_constraintEnd_toEndOf="@id/current_data"
            android:layout_marginTop="20dp">

            <TextView
                android:id="@+id/real_feel_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:textColor="@color/trans_white"
                android:textSize="14sp"
                android:text="@string/real_feel"
                android:layout_marginTop="26dp"
                android:layout_marginStart="26dp"
                />

            <TextView
                android:id="@+id/real_feel_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/real_feel_label"
                app:layout_constraintStart_toStartOf="@id/real_feel_label"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:layout_marginTop="8dp"
                tools:text = "25,7°"
                />

            <TextView
                android:id="@+id/cloudiness_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/real_feel_value"
                app:layout_constraintStart_toStartOf="@id/real_feel_value"
                android:textSize="14sp"
                android:textColor="@color/trans_white"
                android:text="@string/cloudiness"
                android:layout_marginTop="26dp"
                />
            <TextView
                android:id="@+id/cloudiness_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/cloudiness_label"
                app:layout_constraintStart_toStartOf="@id/cloudiness_label"
                app:layout_constraintBottom_toBottomOf="parent"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="26dp"
                tools:text="60%"
                />
            <TextView
                android:id="@+id/visibility_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@id/real_feel_label"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/real_feel_label"
                android:textSize="14sp"
                android:textColor="@color/trans_white"
                android:text="@string/visibility"
                android:layout_marginStart="80dp"
                android:layout_marginEnd="100dp"
                />
            <TextView
                android:id="@+id/visibility_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="@id/visibility_label"
                app:layout_constraintTop_toBottomOf="@id/visibility_label"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:layout_marginTop="8dp"
                tools:text="5000m"
                />

            <TextView
                android:id="@+id/pressure_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="@id/visibility_value"
                app:layout_constraintTop_toTopOf="@id/cloudiness_label"
                android:textSize="14sp"
                android:textColor="@color/trans_white"
                android:text="@string/pressure"
                />
            <TextView
                android:id="@+id/pressure_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="@id/pressure_label"
                app:layout_constraintTop_toTopOf="@id/cloudiness_value"
                android:textSize="18sp"
                android:textColor="@color/white"
                tools:text="1002 mBar"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/add_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/additional_data"
            app:layout_constraintBottom_toBottomOf="parent"
            app:cornerRadius="18dp"
            android:backgroundTint="@color/white"
            android:textColor="@color/button_text"
            android:textAllCaps="false"
            android:text="@string/add_location"
            android:layout_marginEnd="50dp"
            android:layout_marginStart="50dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>